{
  "name": "logistics-management-system",
  "version": "1.10",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "author": {
    "name": "Karl robeck alferez",
    "email": "karlalferezfx@gmail.com",
    "url": "https://github.com/karlrobeck"
  },
  "contributors": [
    {
      "name": "Mhell Bergonio"
    },
    {
      "name": "Vien Kendrick Morfe"
    },
    {
      "name": "Andrei Barlaan"
    }
  ],
  "type": "module",
  "scripts": {
    "dev": "bun concurrently 'bun --filter @apps/backend dev' 'bun --filter @apps/frontend dev' -n 'backend,frontend'",
    "build": "bun run build:packages && bun run build:apps",
    "build:packages": "bun run --filter '@packages/*' build",
    "build:apps": "bun run --filter '@apps/*' build",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "lint:all": "bun run --filter '*' lint",
    "format:all": "bun run --filter '*' format",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@faker-js/faker": "^10.0.0",
    "@types/node": "^24.6.2",
    "concurrently": "^9.2.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0"
  }
}
