{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "incremental": true,
    "verbatimModuleSyntax": true,

    /* path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "seeds","migrations"],
  "exclude": ["node_modules","apps/**/graphql/resolver-types.ts","dist"]
}
