{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".output/**",
        "build/**"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "@packages/ui#build": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "@packages/graphql#build": {
      "inputs": ["src/**/*.{ts,graphql}", "codegen.ts", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "@apps/frontend#build": {
      "dependsOn": ["@packages/ui#build", "@packages/graphql#build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "rsbuild.config.ts", "tsconfig.json"],
      "outputs": [".output/**"]
    },
    "@apps/backend#build": {
      "dependsOn": ["@packages/graphql#build","@packages/ui#build"],
      "inputs": ["src/**/*.ts", "tsconfig.json"],
      "outputs": [".output/**", "dist/**"]
    }
  }
}