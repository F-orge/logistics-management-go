{
  "name": "@packages/graphql",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/src/client/index.d.ts",
      "import": "./dist/src/client/index.js"
    },
    "./client/*": {
      "types": "./dist/src/client/*.d.ts",
      "import": "./dist/src/client/*.js"
    },
    "./client/zod": {
      "types": "./dist/src/zod.schema.d.ts",
      "import": "./dist/src/zod.schema.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run codegen && bun run compile",
    "compile": "tsc -p tsconfig.build.json",
    "codegen": "bun graphql-codegen",
    "codegen:watch": "bun graphql-codegen --watch",
    "dev": "bun run codegen:watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.15.0",
    "@eddeee888/gcg-typescript-resolver-files": "^0.14.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/client-preset": "^5.1.0",
    "@graphql-codegen/introspection": "^5.0.0",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@parcel/watcher": "^2.5.1",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.20",
    "graphql-codegen-typescript-validation-schema": "^0.18.1",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@graphql-yoga/plugin-jwt": "^3.10.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.25.0",
    "kysely": "^0.28.8",
    "zod": "^4.1.12"
  }
}
