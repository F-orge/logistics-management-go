{
  "name": "@packages/db",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*"
    }
  },
  "scripts": {
    "build": "tsc --build && tsc-alias -p tsconfig.json",
    "dev": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.6",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.3",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "typescript": "^5.9.3"
  }
}
