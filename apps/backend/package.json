{
  "name": "@apps/backend",
  "version": "0.0.0",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot --env-file ../../.env src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json && bun build dist/index.js --target bun --outfile .output/server.js --production --minify",
    "start": "bun run dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@graphql-yoga/plugin-jwt": "^3.10.0",
    "@hono/zod-validator": "^0.7.4",
    "@packages/db": "workspace:*",
    "@packages/graphql": "workspace:*",
    "@sendgrid/mail": "^8.1.6",
    "better-auth": "^1.3.27",
    "dotenv": "^17.2.3",
    "graphql-yoga": "^5.16.0",
    "hono": "^4.9.12",
    "kysely": "^0.28.8",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "typescript": "^5.9.3",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0"
  }
}
