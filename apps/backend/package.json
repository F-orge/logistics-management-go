{
  "name": "@apps/backend",
  "version": "0.0.0",
  "main": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot --env-file ../../.env src/index.ts",
    "build": "tsc && tsc-alias -p tsconfig.json && bun build dist/index.js --target node --outfile .output/server.js --production --external @packages/db --external @packages/rpc --external pg --external nodemailer --external @sendgrid/mail --minify",
    "start": "bun run dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@packages/db": "workspace:*",
    "@sendgrid/mail": "^8.1.6",
    "better-auth": "^1.3.27",
    "dotenv": "^17.2.3",
    "hono": "^4.9.12",
    "nodemailer": "^7.0.9",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.2",
    "typescript": "^5.9.3"
  }
}
