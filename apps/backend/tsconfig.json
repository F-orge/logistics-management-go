{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@/*": ["./src/*"],
      "@packages/db": ["../../packages/db/src"],
      "@packages/db/*": ["../../packages/db/src/*"],
      "@packages/rpc": ["../../packages/rpc/src"],
      "@packages/rpc/*": ["../../packages/rpc/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/rpc" }
  ]
}
